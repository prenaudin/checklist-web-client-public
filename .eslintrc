---
parser: babel-eslint

extends: eslint-config-airbnb

plugins:
  - react

env:
  browser: true
  mocha: true
  node: false

rules:
  indent: [1, 2, { SwitchCase: 1, VariableDeclarator: 2 }]
  react/sort-comp: 0
  jsx-quotes: 1
  id-length: [2, {"exceptions": ["e", "i", "_", "S"]}]
  new-cap: 0

globals:
  expect: true
